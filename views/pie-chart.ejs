<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pie Chart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-blue-50 flex flex-col items-center py-10">
    <div class="w-full max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center mb-8">Pie Chart</h1>
        <div>
            <canvas id="pieChart"></canvas>
        </div>
        <a href="/" class="mt-6 inline-block bg-yellow-500 text-white px-4 py-2 rounded-md">Back to Dashboard</a>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const month = new URLSearchParams(window.location.search).get('month');
            fetch(`/piechart?month=${month}`)
                .then(response => response.json())
                .then(data => {
                    const ctx = document.getElementById('pieChart').getContext('2d');
                    const chartData = {
                        labels: data.categories.map(item => item.category),
                        datasets: [{
                            label: 'Number of Items',
                            data: data.categories.map(item => item.count),
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    };
                    const options = {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        const label = context.label || '';
                                        const value = context.raw || 0;
                                        return `${label}: ${value} items`;
                                    }
                                }
                            }
                        }
                    };
                    new Chart(ctx, {
                        type: 'pie',
                        data: chartData,
                        options: options
                    });
                })
                .catch(error => {
                    console.error('Error fetching pie chart data:', error);
                });
        });
    </script>
</body>

</html>